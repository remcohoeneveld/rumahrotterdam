{#
/**
 * @file
 * Theme override to display a single Drupal page while offline.
 *
 * All available variables are mirrored in page.html.twig.
 * Some may be blank but they are provided for consistency.
 *
 * @see template_preprocess_maintenance_page()
 */
#}
<main class="grid place-items-center h-screen" role="main">
  <div class="relative py-16 bg-white dark:bg-black container">
    <div class="max-w-7xl mx-auto bg-rumah-600 lg:bg-transparent lg:px-8">
      <div class="lg:grid lg:grid-cols-12">
        <div class="relative z-10 lg:col-start-1 lg:row-start-1 lg:col-span-4 lg:py-16 lg:bg-transparent">
          <div class="absolute inset-x-0 h-1/2 bg-white dark:bg-black lg:hidden" aria-hidden="true"></div>
          <div class="max-w-md mx-auto px-4 sm:max-w-3xl sm:px-6 lg:max-w-none lg:p-0">
            <div class="aspect-w-10 aspect-h-6 sm:aspect-w-2 sm:aspect-h-1 lg:aspect-w-1">
              <img class="bg-white p-5 object-scale-down object-center rounded-3xl shadow-2xl" src="{{ drupal_url(active_theme_path() ~ '/images/logo.jpg', {absolute: true}) }}" alt="">
            </div>
          </div>
        </div>

        <div class="relative bg-rumah-600 lg:col-start-3 lg:row-start-1 lg:col-span-10 lg:rounded-3xl lg:grid lg:grid-cols-10 lg:items-center">
          <div class="relative max-w-md mx-auto py-12 px-4 space-y-6 sm:max-w-3xl sm:py-16 sm:px-6 lg:max-w-none lg:p-0 lg:col-start-4 lg:col-span-6">
            {% if title %}
              <h2 class="text-3xl font-extrabold text-white" id="join-heading">{{ title }}</h2>
            {% endif %}
            <p class="text-lg text-white">{{ 'The website is currently under maintenance. We should be back shortly. Thank you for your patience.'|t }}</p>
            <a class="block w-full py-3 px-5 text-center bg-white border border-transparent rounded-md shadow-md text-base font-medium text-rumah-700 hover:bg-gray-50 sm:inline-block sm:w-auto" href="{{ path('<front>') }}">{{ 'Refresh the page'|t }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>